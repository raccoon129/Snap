<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Snap.Paginas.InicioPage"
             Title="Recuerdos">
    <Grid RowDefinitions="Auto,*">
        <!-- Cabecera -->
        <ActivityIndicator x:Name="LoadingIndicator"
                           IsRunning="False"
                           IsVisible="False"
                           HorizontalOptions="Center" />
        <!-- Línea separadora -->
        <BoxView Grid.Row="0"
                 HeightRequest="1"
                 Color="LightGray"
                 VerticalOptions="End" />
        <!-- Contenido principal -->
        <RefreshView Grid.Row="1"
                     x:Name="RefrescarContenido"
                     RefreshColor="{StaticResource Primary}"
                     Refreshing="RefrescarContenido_Refreshing">
            <CollectionView x:Name="ListaPublicaciones"
                            EmptyView="Todavía no hay publicaciones para mostrar">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="0,10"
                              RowDefinitions="Auto,Auto,Auto,Auto">
                            <!-- Cabecera usuario -->
                            <Grid Grid.Row="0"
                                  ColumnDefinitions="Auto,*,Auto"
                                  Padding="10,5">
                                <Frame HeightRequest="40"
                                       WidthRequest="40"
                                       CornerRadius="20"
                                       IsClippedToBounds="True"
                                       Padding="0">
                                    <Image Source="{Binding UrlFotoPerfil, TargetNullValue='who.jpg'}"
                                           Aspect="AspectFill" />
                                </Frame>
                                <VerticalStackLayout Grid.Column="1"
                                                     VerticalOptions="Center"
                                                     Margin="10,0">
                                    <Label Text="{Binding NombreUsuario}"
                                           FontAttributes="Bold"
                                           FontSize="14" />
                                    <Label Text="{Binding TiempoPublicacion}"
                                           TextColor="Gray"
                                           FontSize="12" />
                                </VerticalStackLayout>
                            </Grid>
                            <!-- Fotos -->
                            <Frame Grid.Row="1"
                                   Margin="10,0"
                                   Padding="0"
                                   HasShadow="True"
                                   CornerRadius="5"
                                   IsClippedToBounds="True">
                                <Grid HeightRequest="300">
                                    <Image Source="{Binding UrlFoto, TargetNullValue='imagennodisponible.png'}"
                                           Aspect="AspectFill" />
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnPublicacionTapped" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>
                            <!-- Interacciones -->
                            <HorizontalStackLayout Grid.Row="2"
                                                   Spacing="15"
                                                   Margin="15,10">
                                <ImageButton Source="{Binding IconoFavorito}"
                                             HeightRequest="24"
                                             BackgroundColor="Transparent"
                                             Clicked="OnLikeButtonTapped" />
                                <Label Text="{Binding NumeroLikes}"
                                       VerticalOptions="Center" />
                                <ImageButton Source="commentregular.png"
                                             HeightRequest="24"
                                             BackgroundColor="Transparent"
                                             Margin="10,0,0,0" />
                                <Label Text="{Binding NumeroComentarios}"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <!-- Descripción -->
                            <StackLayout Grid.Row="3"
                                         Margin="15,0,15,15">
                                <Label Text="{Binding Descripcion}"
                                       FontSize="14" />
                            </StackLayout>
                            <!-- Línea separadora -->
                            <BoxView Grid.Row="3"
                                     HeightRequest="1"
                                     Color="LightGray"
                                     VerticalOptions="End" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>